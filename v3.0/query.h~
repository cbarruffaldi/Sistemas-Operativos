#ifndef _QUERY_H_
#define _QUERY_H_

#include "database.h"

#define Q_REFRESH(x) "SELECT * FROM "TABLE_TWIT" \
                      WHERE "ATR_TWIT_ID" > "#x";"

#define Q_LIKE(x) "UPDATE "TABLE_TWIT" \
                    SET "ATR_TWIT_LIKE"=1+( \
                   		SELECT "ATR_TWIT_LIKE" \
                   		FROM "TABLE_TWIT" \
                   		WHERE "ATR_TWIT_ID" = "#x") \
                   	WHERE "ATR_TWIT_ID" = "#x";"

#define Q_INSERT(user,msg) "INSERT INTO "TABLE_TWIT" values (\
                   					(SELECT 1+MAX("ATR_TWIT_ID")), '"user"', '"msg"', 0);"





#endif